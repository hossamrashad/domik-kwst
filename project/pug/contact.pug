include variables/variables.pug
include mixin/mixin.pug
doctype 
//- html(lang="ar" dir="rtl" data-theme="light") 
html(lang="en" data-theme="light")
    //- html(lang='ar' dir="rtl") 

    head 
        //- start head  
        include head/head.pug

        block pageTitle
            title Contact

        block Bootstrap
            //- Bootstrap 5.0.1 en
            // Bootstrap 5.0.1 en
            //- link(rel="stylesheet" href="https://hossamrashad.github.io/libraries/css/bootstrap/bootstrap.min.css")
            link(rel="stylesheet" href="css/libs/bootstrap/bootstrap.min.css")       

        //- global framework
        block Framework
            link(rel="stylesheet" href="css/style.css")
            link(rel="stylesheet" href="css/contact.css")
    //- end head

    body 
        //- start body
        include header/header.pug
        div(class="container")
            div(class="row")
                div(class="col-md-8")
                    div(class="header-title-disk")
                        h2(class="h1") Want to order a project ?
                            br 
                            | Contact with us
                        p All the Lorem Ipsum generators on the Internet tend to repeat predefined chunks as necessary, making this the first true .
                    div(class="hr")
                    //- Map
                    div(class="jq-map")
                    div(class="title-input")        
                        h3(class="h1") Contact details :
                        h5 Office in New York
                        a(href="#")  27th Brooklyn New York, NY 10065
                        a(href="#")  +7(111)123456789
                        a(href="#")  yourmail@domain.com
                        p(class="lead") Find Us On : 
                        a(href="#") Facebook
                        a(href="#") Twitter 
                        a(href="#") Instagram
                    div(class="contact-form mt-5 pt-5")
                        form(action="") 
                            div(class="mb-3")
                                label(for="exampleInputEmail1" class="form-label")  Name 
                                input(type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp")
                            div(class="mb-3")
                                label(for="exampleInputEmail2" class="form-label")  Email address
                                input(type="text" class="form-control" id="exampleInputEmail2" aria-describedby="emailHelp")
                            div(class="mb-3")
                                label(for="exampleInputEmail3" class="form-label")  Phone
                                input(type="text" class="form-control" id="exampleInputEmail3" aria-describedby="emailHelp")
                            div(class="form-floating mb-3")
                                textarea(class="form-control" placeholder="Leave a comment here" id="floatingTextarea4" style="height: 200px")
                                label(for="floatingTextarea4") Comments
                            div(class="mb-3")
                                label(for="exampleInputEmail6" class="form-label")  How many gnomes were in the story about the "Snow-white" ?
                                input(type="number" class="form-control number" id="exampleInputEmail6" aria-describedby="emailHelp" value="0")
                            button(type="submit" id="submit" class="mt-3") 
                                span Send 
                                i(class="fas fa-long-arrow-alt-right fa-fw")
                    div(class="hr")
        include footer/footer.pug




        //- Start Global
        //- include global/global.pug
        //- End Global









        include script/script.pug
        //- Jquery Tools
        script(src="js/libs/countTo/jquery.countTo.js")
        script(src="http://maps.google.com/maps/api/js") 
        script(src="js/libs/gmap/gmaps.min.js")
        script(src="js/libs/isotope/isotope-docs.min.js")
        script(src="js/libs/plugin-work/plugin-work.js")
        script(src="js/JQueryTools/JQueryTools.js")
        script(src="http://localhost:35729/livereload.js")

        //- end body
